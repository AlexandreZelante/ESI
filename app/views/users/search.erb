<div class="container">

    <div style="margin:auto; width: 50rem;">
        <%= form_tag(search_path, :method => "get") do %>
            <div class="input-group">
                <%= search_field_tag :search, params[:search], placeholder: "Nome", class: "form-control" %>
                <div class="input-group-btn">
                    <%= button_tag "Pesquisar", class: "btn btn-info glyphicon glyphicon-search", name: nil %>
                </div>
            </div>
        <% end %>

        <table class="table">
            <thead>
                <tr>
                    <th>Nome</th>
                    <th>Categoria</th>
                </tr>
            </thead>

            <tbody>
                <% @results.each do |results| %>
                    <tr>
                        <td><%= results.name %></td>
                        <td><%= results.category %></td>
                        <td><%= button_tag "Seguir", :class => "btn btn-info" %></td>
                    </tr>
                <% end %>
            </tbody>
        </table>
    </div>
    
</div>
