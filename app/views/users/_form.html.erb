<%= form_for(@user) do |users| %>
    <div class="container" style="100rem">
        Nome<br/>
        <%= users.text_field :name, required: true, :class => "form-control" %>
        <br/>

        <div class="form-group row">
            <div class="col-sm-6">
                Email<br/>
                <div class="input-group mb-3">
                    <div class="input-group-prepend">
                        <span class="input-group-text" id="basic-addon1">@</span>
                    </div>
                    <%=  users.text_field :email, required: true, :class => "form-control" %>
                </div>
            </div>
            <div class="col-sm-6">
                Confirme seu Email<br/>
                <div class="input-group mb-3">
                    <div class="input-group-prepend">
                        <span class="input-group-text" id="basic-addon1">@</span>
                    </div>
                    <%=  users.text_field :email_confirmation, required: true, :class => "form-control" %>
                </div>
            </div>
        </div>

        <div class="form-group row">
            <div class="col-sm-6">
                CPF<br/>
                <%= users.text_field :cpf, required: true, numericality: { only_integer: true }, :class => "form-control" %>
            </div>
            <div class="col-sm-6">
                Data de nascimento<br/>
                <%= users.date_field :birth_date, as: :date, value: users.object.try(:strftime,"%m/%d/%Y"), :class => "form-control", required: true %>
            </div>
        </div>

        <div class="form-group row">
            <div class="col-sm-6">
                Telefone<br/>
                <%= users.text_field :phone, required: true, numericality: { only_integer: true }, :class => "form-control" %>
            </div>
            <div class="col-sm-6">
                GÃªnero<br/>
                <%= users.select :gender, ['Masculino', 'Feminino', 'Outro'], :class => "btn btn-secondary dropdown-toggle" %>
            </div>
        </div>

        <div class="form-group row">
            <div class="col-sm-6">
                Senha<br/>
                <%= users.password_field :password, required: true, :class => "form-control" %>
            </div>
            <div class="col-sm-6">
                Confirme sua senha<br/>
                <%= users.password_field :password_confirmation, required: true, :class => "form-control" %>
            </div>
        </div>

        <div class="d-flex flex-row-reverse">
            <div class="p-2">
                <%= users.submit "Cadastrar", :class => "btn btn-primary"%>
            </div>
            <div class="p-2">
                <%= link_to 'Cancelar', users_path, :class => "btn btn-secondary" %>
            </div>
        </div>
    </div>
<% end %>