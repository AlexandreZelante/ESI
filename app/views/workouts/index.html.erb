<div class="container">
  <p id="notice"><%= notice %></p>

  <h1>Treinos cadastrados</h1>
  <br>
  <table class="table">
  <thead>
    <tr>
      <th>#</th>
      <th>Nome</th>
      <th>Coach</th>
      <th>Ações<th>
    </tr>
  </thead>
  <tbody>
    <% @workouts.each do |workout| %>
      <tr>
        <td><%= workout.id %></td>
        <td><%= workout.name %></td>
        <td><%= workout.coach %></td>
        <td>
          <%= link_to 'Mostrar', workout %> / 
          <%= link_to 'Editar', edit_workout_path(workout) %>
        </td>
      </tr>
    <% end %>
  </tbody>
  </table>

  <br>

  <div class="d-flex flex-row-reverse">
    <div class="p-2">
      <%= link_to 'Novo treino', new_workout_path, :class => "btn btn-primary"%>
    </div>
    <div class="p-2">
      <%= link_to 'Voltar', root_path, :class => "btn btn-secondary"%>
    </div>
  </div>
</div>