<div class="card" style="margin:auto; margin-top: 15vmin; width: 20rem;">  
  <div class="card-body">
    <%= form_with scope: :session, url: sign_in_path, local: true do |f| %>
      <form class="px-4 py-3">
        <div class="field">
          <h6 class="card-title" style="margin: 0px;"><%= f.label :email, "Email" %></h6>
          <%= f.email_field :email, autofocus: true %>
        </div>

        </br>
        
        <div class="field">
          <h6 class="card-title" style="margin: 0px;"><%= f.label :password, "Senha" %></h6> 
          <%= f.password_field :password, autocomplete: "off" %>
        </div>
      </form>
      <div class="dropdown-divider"></div>
      <div class="actions"><%= f.submit "Login", :class => "btn btn-primary" %></div>
      <p>Novo aqui? <%= link_to "Registre-se agora!", new_user_path %></p>
    <% end %>
  </div>
</div>